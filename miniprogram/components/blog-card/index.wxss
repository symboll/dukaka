page{
  background-color: #f1f1f1;
}
.blog{
  padding: 20rpx;
  background: #fff;
}

.blog-title {
  display: flex;
  justify-content: center;
  align-items: center;
}

.blog-portrait{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-box{
  flex:1;
}
.blog-box > view:nth-child(1) {
  font-weight: bolder;
}
.blog-time{
  color: #cdcdcd;
}

.blog-content{
  color: #303133;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.blog-img{
  display: flex;
  justify-content:space-between;
  flex-wrap: wrap;
}

.blog-img .img{
  width:230rpx;
  height: 230rpx;
}

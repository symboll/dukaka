.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  padding-left: 60rpx;

}

.search-btn {
  background: #d43c33;
  color: #fff;
  margin-left: 20rpx !important;
  font-size: 24rpx;
  padding-left: 2rpx !important;
  padding-right: 2rpx !important;
  width: 100rpx !important;
}
.placeholder-in-bar{
  color: #999999;
}

.icon-i{
  position: absolute;
  top: 50%;
  transform: translate(16rpx,-50%);
  color: #9f9f9f;
}
.header {
  display: flex;
  align-items: center;
  padding:0 20rpx;
  background: #fff;
  height: 100rpx;
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  z-index: 99;
  box-sizing: border-box;
}


.publish-container {
  width: 68rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header .icon-fabu {
  font-size: 48rpx;
}
.search-container {
  flex: 1;
}


.blog-list{
  margin-top: 100rpx;
}
.blog-panel {
  margin-bottom: 20rpx;
  box-sizing: border-box;
}


.wrap{
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
}
.comment-content{
  flex: 1;
  text-align:left!important;
}
.comment-btn {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  padding-left: 2rpx !important;
  padding-right: 2rpx !important;
  width: 100rpx !important;
  height: 60rpx;
  align-self: flex-end;
}